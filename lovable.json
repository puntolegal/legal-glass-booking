{
  "name": "punto-legal",
  "version": "1.0.0",
  "description": "Plataforma legal premium con agendamiento y pagos",
  "build": {
    "command": "npm run build:prod",
    "output": "dist",
    "environment": {
      "NODE_VERSION": "18"
    }
  },
  "routes": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  ],
  "environment": {
    "NODE_ENV": "production"
  }
} 